<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="EditText.White" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/edittext_rounded_border</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button.Black" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <style name="Button.White" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <!-- Estilo para la tarjeta de la pregunta -->
    <style name="QuestionCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:radius">12dp</item>
    </style>

    <!-- Fondo de la tarjeta -->
    <drawable name="card_background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo de la tarjeta -->
            <corners android:radius="12dp" /> <!-- Bordes curvos -->
        </shape>
    </drawable>
</resources>
